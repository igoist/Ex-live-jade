        //- end admin nav
        //- admin home content
        .hb-content-wrap(style='display: none')
            table.table.table-hover 
                thead
                    tr
                        th 直播名称
                        th 开播时间
                        th 操作选项
                tbody
                    each v in [1, 2, 3, 4, 5, 6, 7]
                        tr
                            td 直播名称
                            td.hb-live-tdst 2017-06-30
